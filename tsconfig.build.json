{
    "extends": "@tsconfig/recommended/tsconfig.json",

    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "esModuleInterop": true,
        "declaration": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },

    "include": [
        "lib"
    ],

    "exclude": [
        "node_modules",
        "dist",
        "lib/**/*unit.ts",
        "lib/**/*shim.ts",
    ]
}
